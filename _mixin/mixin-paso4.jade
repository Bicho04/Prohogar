mixin construccion( ref, baños, superficie, precio, contado, financiado, ficha, presupuesto)
	.casa-paso4
		aside.casa-galeria
			.casa-imagenes
				figure.casa-imagen: img(src="assets/img/casas/Casa-1.1.jpg", alt="")
				figure.casa-imagen: img(src="assets/img/casas/Casa-1.2.jpg", alt="")
				figure.casa-imagen: img(src="assets/img/casas/Casa-1.3.jpg", alt="")
			ul.casa-imagenes-control
				li.casa-imagencita: a(href="#"): img(src="assets/img/casas/Casa-1.1.jpg", alt="")
				li.casa-imagencita: a(href="#"): img(src="assets/img/casas/Casa-1.2.jpg", alt="")
				li.casa-imagencita: a(href="#"): img(src="assets/img/casas/Casa-1.3.jpg", alt="")
		.casa-informaciones
			h3.Referencia Casa ref #{ref}
			p #{baños} baño
			p Sup. #{superficie} m
				span 2
				| a #{precio} Gs.
			hr
			.precios
				.precio
					h5 Contado
					span Gs. #{contado}
				.precio
					h5 Financiado
					span Gs. #{financiado}
			p.ico-pdf
				a(href="#{ficha}"): i.fa.fa-file-text
				| Ver ficha técnica
			p.ico-pdf
				a(href="#{presupuesto}"): i.fa.fa-file-text
				| ver presupuesto
			hr
			h5 Acabados
			ul.casa-acabados
				li minimalista
				li Rústico
				li Tradicional
				li Fina
				li Lujo
		a(href="#").casa-btn.btn#aPaso5 Seleccionar proyecto
		footer.casa-footer
			p 1 de 10 opciones
			a(href="#") ver siguiente


